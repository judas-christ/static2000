doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width")
        title
            block title
                | #{model.title}
    body
        header
            a(href=model.root().relativePath()) Site Name
            nav
                a(href=model.root().relativePath())= model.root().title
                +menu(model.root())

        main(role="main")
            block body

        footer
            p Generated by
                a(href="https://github.com/judas-christ/static2000") Static2000

