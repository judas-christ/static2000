doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width")
        title
            block title
                |= title
    body
        header
            a(href="/")= model.root().title
            a(href="#main-menu") Toggle menu
            nav#main-menu
                a(href="/")= model.root().title
                each page in model.root().children()
                    a(href=page.path)= page.title

        main(role="main")
            block body

        footer
            p Generated by
                a(href="https://github.com/judas-christ/static2000") Static2000

