doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width")
    title
      block title
        | Generated by Static2000
    link(rel="stylesheet", href="<%= baseUrl %>/styles/styles.css")
  body
    header
      nav
        a(href=model.root().relativePath()) /
        each page in model.root().children()
          a(href=page.relativePath())= page.path

    main
      block body

    script(src="<%= baseUrl %>/scripts/scripts.js", async)
